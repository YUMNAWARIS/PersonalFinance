extends ../layouts/base.pug

block title
    title Login Form

block styles
    link(rel="stylesheet", href="/css/auth.css")

block main-body
    .main-div
        .form-heading
            h1 Login
        form(action="/auth/login", method="post") 
            .form-input
                input(type="text", name="email", placeholder="Email")
            .form-input
                input(type="password", name="password" ,placeholder="Confirm a password")
            .submit
                button(type="submit") Login now
        .end
            p Dont have an account? 
                span
                    a(href="/auth/register") Sign up Now
